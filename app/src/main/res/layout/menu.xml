    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

    <Button
